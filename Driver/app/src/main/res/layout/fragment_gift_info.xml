<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    android:orientation="vertical"
    android:padding="15dp"
    tools:context="com.example.sans.myapplication.Utility.Service.ServiceFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:orientation="vertical"
        >



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            >

            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/gift_03"
                android:textColor="@android:color/black"
                android:id="@+id/gift_image"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:orientation="vertical">

                <TextView
                    android:layout_margin="0dp"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="超微粒可拆洗素色壓扣頸枕－碳灰色"
                    android:textSize="18dp"
                    android:textColor="@android:color/black"
                    android:id="@+id/gift_name"
                    />

                <TextView
                    android:layout_marginTop="20dp"
                    android:layout_width="150dp"
                    android:textSize="15dp"
                    android:layout_height="wrap_content"
                    android:text="價格"
                    android:textColor="@color/orange"
                    />

                <TextView
                    android:layout_width="150dp"
                    android:textSize="15dp"
                    android:layout_height="wrap_content"
                    android:text="1500點／1個"
                    android:id="@+id/gift_cost"
                    android:textColor="@android:color/black"
                    />


            </LinearLayout>


        </LinearLayout>





    </LinearLayout>

    <Button android:id="@+id/login_button" style="?android:textAppearanceSmall"
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:text="@string/call"
        android:background="@drawable/orange_button"
        android:textColor="@color/white"
        android:textSize="15dp"
        android:padding="5dp"
        android:stateListAnimator="@null"
        android:textStyle="bold" />

    <WebView
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:id="@+id/webView"
        android:layout_gravity="center_horizontal" />

</LinearLayout>