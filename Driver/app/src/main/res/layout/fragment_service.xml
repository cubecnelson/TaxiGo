            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/office_address_tag"
                android:textColor="@android:color/black"
                />

            <TextView
